<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tieude3"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content"
        android:text="1 tháng dùng Premium miễn phí"
        android:textAlignment="center"
        android:textSize="33dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/list3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nội dung cuộn ngang, trong trường hợp này là RelativeLayout -->
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--                <ImageButton-->
                <!--                    android:id="@+id/imageButton2"-->
                <!--                    app:srcCompat="@drawable/buocquamua"-->
                <!--                    android:layout_width="200dp"-->
                <!--                    android:layout_height="200dp"-->
                <!--                    android:layout_marginLeft="15dp"-->
                <!--                    android:layout_marginRight="15dp"/>-->


                <ImageView
                    android:id="@+id/pre1"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/mienphi2" />

                <ImageView
                    android:id="@+id/pre2"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/pre1"
                    android:src="@drawable/mienphi3" />

                <ImageView
                    android:id="@+id/pre3"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/pre2"
                    android:src="@drawable/mienphi1" />

                <ImageView
                    android:id="@+id/pre4"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/pre3"
                    android:src="@drawable/mienphi4" />





            </RelativeLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tieude4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Bạn không thể naang cấp lên Premium trong ứng dụng này.Chúng tôi biết điều này thật bất tiện."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        android:background="#D7322D2D"
        android:gravity="center"
        android:text="Spotifi Free               GÓI HIỆN TẠI"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/pre5"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="22dp"
        android:src="@drawable/mienphi5" />

    <ImageView
        android:id="@+id/pre6"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="22dp"
        android:src="@drawable/mienphi6" />
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="15dp"/>


</LinearLayout>
</ScrollView>