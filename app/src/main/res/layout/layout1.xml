<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817777"
    android:backgroundTint="#7A7575"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#F33B9E33"
            android:text="Tất cả"
            android:textColor="#221A1A" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:backgroundTint="#753E3A3A"
            android:text="Nhạc" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#753E3A3A"
            android:text="Podcasts"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:backgroundTint="#753E3A3A"
            android:text="Nhìn lại"
            android:textSize="12sp" />

    </TableRow>

    <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp" />

    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="Tập dành cho bạn"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />




    <RelativeLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nội dung cuộn ngang, trong trường hợp này là RelativeLayout -->
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--                <ImageButton-->
                <!--                    android:id="@+id/imageButton2"-->
                <!--                    app:srcCompat="@drawable/buocquamua"-->
                <!--                    android:layout_width="200dp"-->
                <!--                    android:layout_height="200dp"-->
                <!--                    android:layout_marginLeft="15dp"-->
                <!--                    android:layout_marginRight="15dp"/>-->
                <ImageView
                    android:id="@+id/vu"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/playlisstvu" />


                <ImageView
                    android:id="@+id/tlink"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/vu"
                    android:src="@drawable/tlink" />

                <ImageView
                    android:id="@+id/wren"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/tlink"
                    android:src="@drawable/wren" />

                <ImageView
                    android:id="@+id/min"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/wren"
                    android:src="@drawable/min" />

                <ImageView
                    android:id="@+id/mck"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/min"
                    android:src="@drawable/playmck" />

                <ImageView
                    android:id="@+id/hd"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/mck"
                    android:src="@drawable/hoangdung" />




            </RelativeLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tieude1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="Tuyển tập hàng đầu của bạn"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>
